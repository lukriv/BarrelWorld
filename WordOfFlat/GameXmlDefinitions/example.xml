<world>
	<definitions>
		
		<meshdefs>
			<mesh name="mesh1">
				<meshname value="TestingCube" />
			</mesh>
		</meshdefs>
		
		<materialdefs>
			<material name="material1">
				<materialname value="Test/ColourTest" />
			</material>
		</materialdefs>
		
		<inputdefs>
			<input name="testInput">
				<up value="key_w" />
				<down value="key_s" />
				<left value="key_a" />
				<right value="key_d" />
			</input>
			
			<input name="cameraInput">
				<up value="key_i" />
				<down value="key_k" />
				<left value="key_j" />
				<right value="key_l" />
			</input>
		</inputdefs>
		
		<logicdefs>
			<logic name="manualLogic">
				<logictype value="MANUAL_TEST" />
			</logic>
		</logicdefs>
		
		<cameradefs>
			<camera name="MainCamera">
					<position xyz="0.0, 10.0, -5.0" />
					<direction xyz="0, -10, 5" />
			</camera>
		</cameradefs>
		
		<renderentdefs>
			<renderent name="renderEnt1">
				<meshref value="mesh1" />
				<materialref value="material1" />
				<position xyz="0.0;0.0;0.0" />
			</renderent>
		</renderentdefs>
		
		<renderdefs>
			<render name="render1">
				<renderentref value="renderEnt1" />
			</render>
			
			<render name="render2">
				<cameraref value="MainCamera" />
			</render>
		</renderdefs>
		
	</definitions>


	<scene>
		<entity name="entity1">
			<transform>
				<position xyz="0.0, 0.0, 0.0" />
				<scale xyz="1.0, 1.0, 1.0" />
				<rotation quat="1.0, 0.0, 0.0, 0.0" />				
			</transform>
			
			<renderref value="render1" />
			
			<inputref value="testInput" />
			
			<logicref value="manualLogic" />
		</entity>
		
		<entity name="mainCameraEntity">
			<transform>
				<position xyz="0.0, 0.0, 0.0" />
				<scale xyz="1.0, 1.0, 1.0" />
				<rotation quat="1.0, 0.0, 0.0, 0.0" />				
			</transform>
			
			<renderref value="render2" />
			
			<inputref value="cameraInput" />
			
			<logicref value="manualLogic" />
		</entity>
	</scene>
</world>