<world>
	<definitions>
		
		<meshdefs>
			<mesh name="mesh1">
				<param name="meshname" value="TestingCube" />
			</mesh>
		</meshdefs>
		
		<materialdefs>
			<material name="material1">
				<param name="materialname" value="Test/ColourTest" />
			</material>
		</materialdefs>
		
		<inputdefs>
			<input name="testInput">
				<key action="up" value="key_w" />
				<key action="down" value="key_s" />
				<key action="left" value="key_a" />
				<key action="right" value="key_d" />
			</input>
			
			<input name="cameraInput">
				<key action="up" value="key_i" />
				<key action="down" value="key_k" />
				<key action="left" value="key_j" />
				<key action="right" value="key_l" />
			</input>
		</inputdefs>
		
		<logicdefs>
			<logic name="manualLogic">
				<param name="logictype" value="MANUAL_TEST" />
			</logic>
		</logicdefs>
		
		<cameradefs>
			<camera name="MainCamera">
				<param name="position" value="0.0, 10.0, -5.0" />
				<param name="direction" value="0, -10, 5" />
			</camera>
		</cameradefs>
		
	</definitions>


	<scene>
		<terrain>
			<param name="mapSize" value="1025" />
			<param name="worldSize" value="1025" />
			<terrainpages>
				<terrainpage filename="terrain_00000000.bmp" pageX="0" pageY="0" />
			</terrainpages>
		</terrain>
		<entity name="entity1">
			<transform>
				<param name="position" value="0.0, 0.0, 0.0" />
				<param name="scale" value="1.0, 1.0, 1.0" />
				<param name="rotation" value="1.0, 0.0, 0.0, 0.0" />				
			</transform>
			
			<render name="render1">
				<renderent name="renderEnt1">
					<meshref value="mesh1" />
					<materialref value="material1" />
					<param name="position" value="0.0;0.0;0.0" />
				</renderent>
			</render>
			
			<inputref value="testInput" />
			
			<logicref value="manualLogic" />
			<physics type="rigid">
				<shape type="box">
					<param name="boxHalfSize" value="1.0, 1.0, 1.0" />
				</shape>
				<param name="mass" value="1.0" />
				<param name="inertia" value="0.0,0.0,0.0" />
			</physics>
		</entity>
		
		<entity name="entity2">
			<transform>
				<param name="position" value="1.0, 1.0, 0.0" />
				<param name="scale" value="1.0, 1.0, 1.0" />
				<param name="rotation" value="1.0, 0.0, 0.0, 0.0" />				
			</transform>
			
			<render name="render2">
				<renderent name="renderEnt2">
					<mesh>
						<param name="meshname" value="TestingCube" />
					</mesh>
					<materialref value="material1" />
					<param name="position" value="0.0;0.0;0.0" />
				</renderent>
			</render>
			
			<inputref value="testInput" />
			
			<logicref value="manualLogic" />
			
			<physics type="collision">
				<shape type="box">
					<param name="boxHalfSize" value="1.0, 1.0, 1.0" />
				</shape>
				<param name="mass" value="1.0" />
				<param name="inertia" value="0.0,0.0,0.0" />
			</physics>
		</entity>
		
		<entity name="mainCameraEntity">
			<transform>
				<param name="position" value="0.0, 0.0, 0.0" />
				<param name="scale" value="1.0, 1.0, 1.0" />
				<param name="rotation" value="1.0, 0.0, 0.0, 0.0" />				
			</transform>
			
			<render name="render3">
				<cameraref value="MainCamera" />
			</render>
			
			<inputref value="cameraInput" />
			
			<logicref value="manualLogic" />
			
		</entity>
	</scene>
</world>