<world>
	<definitions>
		
		<meshdefs>
			
		</meshdefs>
		
		<materialdefs>
			<material name="material1">
				<materialname value="Test/ColourTest" />
			</material>
		</materialdefs>
		
		<inputdefs>
			<input name="testInput">
				<key action="up" value="key_w" />
				<key action="down" value="key_s" />
				<key action="left" value="key_a" />
				<key action="right" value="key_d" />
			</input>
			
			<input name="cameraInput">
				<key action="up" value="key_i" />
				<key action="down" value="key_k" />
				<key action="left" value="key_j" />
				<key action="right" value="key_l" />
			</input>
		</inputdefs>
		
		<logicdefs>
			<logic name="manualLogic">
				<logictype value="MANUAL_TEST" />
			</logic>
		</logicdefs>
		
		<cameradefs>
			<camera name="MainCamera">
					<position xyz="0.0, 10.0, -5.0" />
					<direction xyz="0, -10, 5" />
			</camera>
		</cameradefs>
		
	</definitions>


	<scene>
		<entity name="entity1">
			<transform>
				<position xyz="0.0, 0.0, 0.0" />
				<scale xyz="1.0, 1.0, 1.0" />
				<rotation quat="1.0, 0.0, 0.0, 0.0" />				
			</transform>
			
			<render name="render1">
				<renderent name="renderEnt1">
					<meshref value="mesh1" />
					<materialref value="material1" />
					<position xyz="0.0;0.0;0.0" />
				</renderent>
			</render>
			
			<inputref value="testInput" />
			
			<logicref value="manualLogic" />
			<physics>
				<shape type="shape_box">
					<param name="boxHalfSize" value="0.5, 0.5, 0.5" />
				</shape>
				<param name="mass" value="1.0" />
				<param name="inertia" value="0.0,0.0,0.0" />
			</physics>
		</entity>
		
		<entity name="entity2">
			<transform>
				<position xyz="1.0, 1.0, 0.0" />
				<scale xyz="1.0, 1.0, 1.0" />
				<rotation quat="1.0, 0.0, 0.0, 0.0" />				
			</transform>
			
			<render name="render2">
				<renderent name="renderEnt2">
					<mesh>
						<param name="meshname" value="TestingCube" />
					</mesh>
					<materialref value="material1" />
					<position xyz="0.0;0.0;0.0" />
				</renderent>
			</render>
			
			<inputref value="testInput" />
			
			<logicref value="manualLogic" />
			
			<physics>
				<shape type="shape_box">
					<param name="boxHalfSize" value="0.5, 0.5, 0.5" />
				</shape>
				<param name="mass" value="1.0" />
				<param name="inertia" value="0.0,0.0,0.0" />
			</physics>
		</entity>
		
		<entity name="mainCameraEntity">
			<transform>
				<position xyz="0.0, 0.0, 0.0" />
				<scale xyz="1.0, 1.0, 1.0" />
				<rotation quat="1.0, 0.0, 0.0, 0.0" />				
			</transform>
			
			<render name="render3">
				<cameraref value="MainCamera" />
			</render>
			
			<inputref value="cameraInput" />
			
			<logicref value="manualLogic" />
			
		</entity>
	</scene>
</world>